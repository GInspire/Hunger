<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hathy.fblogin.Add_Ingredients"

    android:background="@drawable/capture">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="SUGGESTED INGREDIENTS"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="23dp"
        android:background="#98ee4fd1"
        android:textColor="#050505"
        android:textAlignment="gravity"
        android:textColorHighlight="#ffffff" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout"
        android:weightSum="1">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"></TableRow>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NEXT"
            android:id="@+id/button20"
            android:background="#b8fee56d"
            android:layout_weight="0.89"
            android:onClick="next" />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bacon +"
        android:id="@+id/button2"
        android:background="#a4ffffff"
        android:onClick="bacon"
        android:layout_above="@+id/button17"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="onion +"
        android:id="@+id/button3"
        android:background="#a4ffffff"
        android:onClick="onion"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/button4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cream +"
        android:id="@+id/button4"
        android:background="#a4ffffff"
        android:onClick="cream"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="46dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="peas +"
        android:id="@+id/button7"
        android:background="#a4ffffff"
        android:onClick="peas"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pickel +"
        android:id="@+id/button9"
        android:background="#a4ffffff"
        android:onClick="pickel"
        android:layout_alignTop="@+id/button11"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cheese +"
        android:id="@+id/button11"
        android:background="#a4ffffff"
        android:onClick="cheese"
        android:layout_below="@+id/button7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="noodle +"
        android:id="@+id/button12"
        android:layout_below="@+id/button9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp"
        android:background="#a4ffffff"
        android:onClick="noodle" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="spinach +"
        android:id="@+id/button15"
        android:background="#a4ffffff"
        android:onClick="spinach"
        android:layout_alignBottom="@+id/button17"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="peanuts +"
        android:id="@+id/button16"
        android:background="#a4ffffff"
        android:onClick="peanuts"
        android:layout_alignTop="@+id/button12"
        android:layout_alignRight="@+id/button17"
        android:layout_alignEnd="@+id/button17" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MIXEDVEGTABLE"
        android:id="@+id/button17"
        android:background="#a4ffffff"
        android:onClick="mixedvegetable"
        android:layout_below="@+id/button16"
        android:layout_toRightOf="@+id/button"
        android:layout_toEndOf="@+id/button"
        android:layout_marginTop="52dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="flour +"
        android:id="@+id/button"
        android:background="#a4ffffff"
        android:onClick="flour"
        android:layout_below="@+id/button2"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3" />

</RelativeLayout>