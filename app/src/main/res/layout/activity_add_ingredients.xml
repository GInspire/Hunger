<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gisi.gridviewtesting.MainActivity"
    android:background="@drawable/capture">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="SUGGESTED INGREDIENTS"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="23dp"
        android:background="#98ee4fd1"
        android:textColor="#050505"
        android:textAlignment="gravity"
        android:textColorHighlight="#ffffff" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="butter +"
            android:id="@+id/button"
            android:background="#a4ffffff"
            android:onClick="butter" />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="banana +"
        android:id="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#a4ffffff"
        android:onClick="banana"
        android:layout_below="@+id/linearLayout" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" rice +"
        android:id="@+id/button3"
        android:background="#a4ffffff"
        android:layout_above="@+id/button5"
        android:layout_alignLeft="@+id/button8"
        android:layout_alignStart="@+id/button8"
        android:onClick="rice" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="eggs +"
        android:id="@+id/button4"
        android:background="#a4ffffff"
        android:layout_below="@+id/button2"
        android:layout_alignRight="@+id/button7"
        android:layout_alignEnd="@+id/button7"
        android:onClick="eggs" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="olive oil +"
        android:id="@+id/button5"
        android:background="#a4ffffff"
        android:layout_alignTop="@+id/button4"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:onClick="oliveOil" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="lemon +"
        android:id="@+id/button6"
        android:layout_alignTop="@+id/button5"
        android:layout_toRightOf="@+id/button5"
        android:layout_toEndOf="@+id/button5"
        android:background="#a4ffffff"
        android:onClick="lemon" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tomato +"
        android:id="@+id/button7"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#a4ffffff"
        android:onClick="tomatoes" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="vegetable oil +"
        android:id="@+id/button8"
        android:layout_alignTop="@+id/button7"
        android:layout_centerHorizontal="true"
        android:background="#a4ffffff"
        android:onClick="vegetableOil" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bread +"
        android:id="@+id/button10"
        android:background="#a4ffffff"
        android:onClick="bread"
        android:layout_alignLeft="@+id/button8"
        android:layout_alignStart="@+id/button8"
        android:layout_below="@+id/button7" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="apple +"
        android:id="@+id/button11"
        android:layout_alignBottom="@+id/button10"
        android:background="#a4ffffff"
        android:onClick="apple"
        android:layout_alignRight="@+id/button14"
        android:layout_alignEnd="@+id/button14"
        android:layout_alignLeft="@+id/button17"
        android:layout_alignStart="@+id/button17" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" milk +"
        android:id="@+id/button12"
        android:background="#a4ffffff"
        android:onClick="milk"
        android:layout_above="@+id/button15"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="potato +"
        android:id="@+id/button14"
        android:background="#a4ffffff"
        android:onClick="potato"
        android:layout_above="@+id/button17"
        android:layout_alignLeft="@+id/button17"
        android:layout_alignStart="@+id/button17" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="carrot +"
        android:id="@+id/button15"
        android:background="#a4ffffff"
        android:onClick="carrot"
        android:layout_above="@+id/button18"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="beef +"
        android:id="@+id/button16"
        android:background="#a4ffffff"
        android:onClick="beef"
        android:layout_above="@+id/button18"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="chocolate +"
        android:id="@+id/button17"
        android:layout_alignBottom="@+id/button16"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#a4ffffff"
        android:onClick="chocolate" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="reload suggestion"
        android:id="@+id/button18"
        android:background="#98ee4fd1"
        android:onClick="reload"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/linearLayout"
        android:layout_alignEnd="@+id/linearLayout" />


</RelativeLayout>
